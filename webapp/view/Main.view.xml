<mvc:View
	controllerName="personal.patsy.hotel.controller.Main"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:form="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	core:require="{
		formatter: 'personal/patsy/hotel/model/formatter'
	}">

	<Page id="page" showHeader="false" class="sapUiContent pageBackground">
		<content>
			<FlexBox height="100%" justifyContent="Center" alignItems="Center">
				<Panel width="500px" height="550px">
					<VBox width="100%" height="100%" justifyContent="Center" alignItems="Center">
						<form:SimpleForm
							id="loginForm"
							editable="true"
							layout="ResponsiveGridLayout"
							labelSpanL="3"
							labelSpanM="3"
							emptySpanL="0"
							emptySpanM="0"
							columnsL="1"
							columnsM="1">
							<HBox justifyContent="Center" width="100%" alignItems="Center" class="sapUiSmallMarginBottom">
								<items>
									<Avatar src="./images/logo.png" displayShape="Square" displaySize="Custom" customDisplaySize="10rem"/>
								</items>
							</HBox>
							<Label text="Username" />
							<Input id="usernameInput" placeholder="Enter username" />
							<Label text="Password" />
							<Input id="passwordInput" type="Password" placeholder="Enter password" />
							<Link text="Forgot Password?" press="onForgotPasswordPress" />
							<Button text="Login" press="onLoginPress" type="Emphasized" width="100%" class="sapUiSmallMarginTop"/>
							<Button text="Register" press="onRegisterPress" width="100%" />
						</form:SimpleForm>
					</VBox>
				</Panel>
			</FlexBox>
		</content>
	</Page>
</mvc:View>
