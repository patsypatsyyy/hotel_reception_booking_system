<core:FragmentDefinition xmlns:tnt="sap.tnt" 
    xmlns:core="sap.ui.core" 
    xmlns="sap.m" 
    xmlns:layout="sap.ui.layout">
    <Panel height="100%" width="auto">
        <Bar design="Header">
            <contentLeft>
                <Title text="Today's Summary" level="H5" titleStyle="H5" />
            </contentLeft>
            <contentRight>
                <Button icon="sap-icon://action-settings" tooltip="Customize Panel"></Button>
            </contentRight>
        </Bar>
        <Carousel backgroundDesign="Transparent" showPageIndicator="false" loop="true" class="sapUiTinyMarginTop" height="auto">
            <layout:Grid class="sapUiTinyMarginTop sapUiSmallMarginBottom" hSpacing="1" vSpacing="1" defaultSpan="XL4 L4 M4 S12">
                <layout:content>
                    <GenericTile class="sapUiTinyMarginTop" header="Rooms Available" subheader="This week" width="100%">
                        <TileContent unit="Rooms">
                            <NumericContent value="15" valueColor="Good" icon="sap-icon://bbyd-active-sales" withMargin="false" />
                        </TileContent>
                    </GenericTile>
                    <GenericTile class="sapUiTinyMarginTop tileLayout" header="Current Guests Checked-In" subheader="This week" width="100%">
                        <TileContent unit="Guests">
                            <NumericContent value="24" valueColor="Good" icon="sap-icon://address-book" withMargin="false" />
                        </TileContent>
                    </GenericTile>
                    <GenericTile class="sapUiTinyMarginTop tileLayout" header="Arrivals Today / Departures Today" width="100%">
                        <TileContent unit="Guests">
                            <NumericContent value="6" valueColor="Critical" icon="sap-icon://collaborate" withMargin="false" />
                        </TileContent>
                    </GenericTile>
                </layout:content>
            </layout:Grid>
            <layout:Grid class="sapUiTinyMarginTop sapUiSmallMarginBottom" hSpacing="1" vSpacing="1" defaultSpan="XL4 L4 M4 S12">
                <layout:content>
                    <GenericTile class="sapUiTinyMarginTop tileLayout" header="Pending Reservations" subheader="This week" width="100%">
                        <TileContent unit="Reservations">
                            <NumericContent value="29" valueColor="Critical" icon="sap-icon://pending" withMargin="false" />
                        </TileContent>
                    </GenericTile>
                    <GenericTile class="sapUiTinyMarginTop tileLayout" header="Rooms for Housekeeping" subheader="This week" width="100%">
                        <TileContent unit="Rooms">
                            <NumericContent value="14" valueColor="Critical" icon="sap-icon://ai" withMargin="false" />
                        </TileContent>
                    </GenericTile>
                    <GenericTile class="sapUiTinyMarginTop tileLayout" header="Rooms under Maintenance" subheader="This week" width="100%">
                        <TileContent unit="Rooms">
                            <NumericContent value="11" valueColor="Error" icon="sap-icon://wrench" withMargin="false" />
                        </TileContent>
                    </GenericTile>
                </layout:content>
            </layout:Grid>
        </Carousel>
    </Panel>
</core:FragmentDefinition>